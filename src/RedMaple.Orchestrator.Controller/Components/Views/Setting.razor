<div style="display: grid; grid-template-columns: 1fr auto; gap: 4px; padding: 8px; border: solid 1px rgba(255,255,255,0.1); border-radius: 8px; background: rgba(0,0,0,0.1); ">
    <div style="margin-left: 5px; ">
      
        <MudText Typo="Typo.body1" Style="font-weight: bold; font-size: 10pt">@Title</MudText>
        <MudText Typo="Typo.subtitle1">@SubTitle</MudText>
    </div>
    <div style="min-width: 400px; max-width: 100%; display: flex;  word-wrap: break-word; justify-content: flex-end; flex-wrap: wrap; white-space: pre-wrap; overflow: auto">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string SubTitle { get; set; } = "";
}
